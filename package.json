{
  "name": "my-introduction-page",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.88",
    "@types/react": "^18.2.65",
    "@types/react-dom": "^18.2.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "homepage": "https://ishizuka-t.github.io/my-introduction-page/",
  "scripts": {
    "start": "react-scripts start", 
    "build": "react-scripts build",
    "test": "react-scripts test", 
    "eject": "react-scripts eject", 
    "predeploy": "npm run build",
    "deploy": "npm run predeploy && npm run deploy:clean && npm run deploy:move && npm run deploy:git",
    "deploy:clean": "powershell -Command \"if (Test-Path docs) { Remove-Item docs -Recurse -Force }\"",
    "deploy:move": "powershell -Command \"Move-Item -Path build -Destination docs\"",
    "deploy:git": "powershell -Command \"git add . ; git commit -m 'deploy' ; git push origin master\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "gh-pages": "^6.1.1"
  }
}
